---
import "../styles/global.css";
import "../styles/index.css";
import Navigation from "../components/Navigation.astro";
import Connect from "../components/Connect.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Daniyal Master's Homepage. Student, Web Developer, and Aspiring Full Stack Developer."
    />
    <link rel="icon" type="image/png" sizes="32x32" href="Logo.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="Logo.webp" />
    <link rel="mask-icon" href="Logo.png" />
    <title>Home | Daniyal Master</title>
