  <style>
    .maincontainer {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .project-section {
      width: 100%;
      margin-top: 90px;
      animation: var(--fadeIn);
    }

    .project-top {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .project-top h1 {
      color: var(--purple);
      font-size: 2rem;
      font-family: var(--Inter);
      font-weight: 650;
      text-align: left;
      width: 600px;
    }

    .project-hr {
      width: 37.5rem;
      border: var(--hr);
      margin-top: 3rem;
      margin-bottom: 3rem;
    }

    .project-information {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-top: 2rem;
    }

    .all-projects {
      text-decoration: none;
    }

    .arrow {
      color: var(--secondary-grey);
      font-family: var(--Inter);
      font-weight: 650;
      cursor: pointer;
      transition: var(--ease-in-out);
    }

    .project-top p,
    .project-information p {
      color: var(--secondary-grey);
      font-size: 16px;
      font-family: var(--Inter);
      font-weight: 400;
      letter-spacing: 0.023px;
      line-height: 1rem;
      width: 600px;
      text-align: left;
    }

    .project-top p {
      cursor: pointer;
      margin-bottom: 4rem;
      transition: var(--ease-in-out);
    }

    .project-top p:hover {
      color: var(--primary-grey);
    }

    .project-information p {
      margin-top: 0.75rem;
    }

    span {
      color: var(--primary-grey);
    }

    .image-carousel {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 1rem;
      margin-bottom: 4rem;
    }

    .project-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      margin-top: 400px;
    }

    .project-content h2 {
      color: var(--primary-grey);
      font-family: var(--Inter);
      font-size: 1.35rem;
      font-weight: 600;
      line-height: 1.25rem;
      text-align: left;
      width: 600px;
      margin-top: 3rem;
    }

    .project-content p {
      color: var(--secondary-grey);
      font-size: 1rem;
      font-family: var(--Inter);
      font-weight: 400;
      line-height: 1.75rem;
      letter-spacing: 0.023rem;
      width: 600px;
      margin-top: 1.75rem;
      margin-bottom: 1.75rem;
      text-align: left;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      max-width: 600px;
      max-height: 350px;
      transform-style: preserve-3d;
    }

    input[type="radio"] {
      display: none;
    }

    .card {
      width: 600px;
      height: 350px;
      position: absolute;
      left: 0;
      right: 0;
      margin: auto;
      transition: transform 0.4s ease;
      cursor: pointer;
    }

    img {
      width: 600px;
      height: 350px;
      border-radius: 1.2rem;
      object-fit: cover;
    }

    #item-1:checked ~ .cards #card-3,
    #item-2:checked ~ .cards #card-1,
    #item-3:checked ~ .cards #card-2 {
      transform: translatex(-40%) scale(0.8);
      opacity: 0.4;
      z-index: 0;
    }

    #item-1:checked ~ .cards #card-2,
    #item-2:checked ~ .cards #card-3,
    #item-3:checked ~ .cards #card-1 {
      transform: translatex(40%) scale(0.8);
      opacity: 0.4;
      z-index: 0;
    }

    #item-1:checked ~ .cards #card-1,
    #item-2:checked ~ .cards #card-2,
    #item-3:checked ~ .cards #card-3 {
      transform: translatex(0) scale(1);
      opacity: 1;
      z-index: 1;
    }

    .dock {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 58px;
      width: 195px;
      gap: 5px;
      padding: 15px 30px 15px 30px;
      margin-bottom: -25px;
      border-radius: 999px;
      background: #131313;
      outline: 1px solid #343434;
      position: sticky;
      bottom: 15px;
      z-index: 999;
      left: 0;
      right: 0;
    }

    .dock a {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 45px;
      width: 45px;
      border-radius: 12px;
      transition:
        transform 0.3s ease-in-out,
        background-color 0.3s ease-in-out;
    }

    .dock a:hover {
      background-color: var(--hover-black);
    }

    .tooltip-text-1,
    .tooltip-text-2,
    .tooltip-text-3 {
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #131313;
      color: var(--secondary-grey);
      font-family: var(--Inter);
      font-size: 0.95rem;
      text-align: center;
      outline: 1px solid #343434;
      border-radius: 0.5rem;
      padding: 7px 10px 7px 10px;
      height: 35px;
      width: 100px;
      position: absolute;
      top: -40px;
      z-index: 2;
    }

    .tooltip-text-1 {
      left: 0;
    }

    .tooltip-text-2 {
      left: 25%;
    }

    .tooltip-text-3 {
      right: 0;
    }

    #fade {
      opacity: 0;
      transition: opacity 0.5s;
    }

    .home-button:hover #fade,
    .today-button:hover #fade,
    .completed-button:hover #fade,
    .projects-button:hover #fade {
      opacity: 1;
    }

    .home-button,
    .today-button,
    .completed-button,
    .projects-button {
      height: 45px;
      width: 45px;
      background-color: transparent;
      border: none;
      cursor: pointer;
    }

    .home-button img,
    .today-button img,
    .completed-button img,
    .projects-button img {
      height: 22px;
      width: 22px;
    }
  </style>
</html>
